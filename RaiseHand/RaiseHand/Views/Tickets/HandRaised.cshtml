@model RaiseHand.Models.Ticket

@{
    ViewBag.Title = "HandRaised";
}

<h2>HandRaised</h2>

<div>
    <h4>Your hand is raised.</h4>
    <hr />

    <div>
        <p>
            Keep this tab open or you will lose your ticket, and your place in line.
        </p>
    </div>

    <div style="text-align:center;">
        <p>Your Ticket Number is:</p>
        <h2 style="color:red;">@Html.DisplayFor(model => model.Number)</h2>
        <p>Location:</p>
        <h3>@Html.DisplayFor(model => model.Location.Name)</h3>
        <p>Number of other hands raised:</p>
        <h3>@ViewBag.HandCount</h3>
    </div>

    <div class="row">
        <div class="col-md-4">

            @Html.ActionLink("Helped", "Helped", "Tickets", new { Model.Id }, new { @class = "btn btn-info", @id = "helpedButton" })
            @Html.ActionLink("Nevermind", "Nevermind", "Tickets", new { Model.Id }, new { @class = "btn btn-info", @id = "nevermindButton" })
            @Html.ActionLink("Unhelped", "Unhelped", "Tickets", new { Model.Id }, new { @class = "btn btn-info", @id = "unhelpButton" })
            
        </div>
                
        <div class="col-md-4">
            @using (Html.BeginForm("ChangeSubject", "Tickets", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        @Html.LabelFor(model => model.SubjectId, "Subject", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("SubjectId", null, "--Select--", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Change Subject" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            @using (Html.BeginForm("ChangeLocation", "Tickets", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        @Html.LabelFor(model => model.LocationId, "Location", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("LocationId", null, "--Select--", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LocationId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Change Location" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

